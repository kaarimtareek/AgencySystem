<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <style>
        footer {
           
        }

        footer {
            background-color: #555;
            
            padding: 15px;
            margin: 0px;
            position: absolute;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: black;
            color: white;
            text-align: center;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding:0px">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item" style="padding:10px">
                            @Html.ActionLink("My Profile", "AdminProfile", "Admin")
                        </li>
                        <li class="nav-item"style="padding:10px">
                            @Html.ActionLink("Customers", "Customers", "Admin")
                        </li>
                       
                        <li class="nav-item"style="padding:10px">
                            @Html.ActionLink("Posts", "Posts", "Admin")
                        </li>
                        <li class="nav-item"style="padding:10px">
                            @Html.ActionLink(linkText :"Pending Posts",actionName: "Posts",controllerName: "Admin",routeValues: new { status = "PENDING"},htmlAttributes: new { } )
                        </li>
                        <li class="nav-item"style="padding:10px">
                            @Html.ActionLink("Editors", "Editors", "Admin")
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container body-content">
        @RenderBody()

    </div>
    <footer  align="bottom">
        <p>&copy;copyright 2021</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>

</html>